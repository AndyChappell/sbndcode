<?xml version="1.0"?>

<!-- Production Project -->

<!DOCTYPE project [
<!ENTITY release "v09_15_00">
<!ENTITY releasetag "e19:prof">
<!ENTITY my_version "v3">
<!ENTITY config "standard">
<!ENTITY name "mdeltutt_ob_inair">
