}

sbnd_cheattzerotagger:
{
  module_type: CheatT0Tagger
  PandoraLabel: "pandora"
}

standard_showervalidation: {
   module_type: "ShowerValidation"
   GenieGenModuleLabel:      "generator"
   LArGeantModuleLabel:      "largeant"
   HitsModuleLabel:          "gaushit"
   TrackModuleLabel:         "pandoraTrack"
   PFParticleLabel:          "pandora"
   PFPValidation:             true
   ShowerModuleLabels:        ["emshower"]
   HitModuleLabels:           ["gaushit"]
   UseBiggestShower:          true
   DrawCanvases:              false
   FillOnlyClosestShower:     true
   RemoveNonContainedParticles: true
   UseNeutrinoShowers:          true
   ClusterValidation:           true
   HitValidation:               true
   MatchShowersInTruth:         true
   Verbose:                   0
   MinHitSize:                20
   SimEnergyCut:              0.1
   DensityCut:                1.2
   MaxSimEnergy:              1500
   MinRecoEnergy:             0
   MatchedCut:                0.5
}

END_PROLOG
